<UserControl x:Class="DynamicMusicPlayerWPF.MusicUploadUI.AudioDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DynamicMusicPlayerWPF.MusicUploadUI"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="468">
    <Grid>
        <Rectangle x:Name="backgroundColor" Width="468" Height="30" Fill="#FFB0B0B0" Stroke="Black"/>
        <Label x:Name="TitleLabel" Content="TitleOfFile.mp3" Width="321" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="6,2,0,2"/>
        <ComboBox x:Name="intensityCombobox" HorizontalAlignment="Right" VerticalAlignment="Center" Width="100" SelectedValuePath="Content" BorderBrush="Black" Margin="0,5,35,5">
            <ComboBoxItem Content="Low" Background="#FF9CFFA5" BorderBrush="Black"/>
            <ComboBoxItem Content="Medium" Background="#FFE1FF26" BorderBrush="Black"/>
            <ComboBoxItem Content="High" Background="#FFFF9797" BorderBrush="Black"/>
        </ComboBox>
        <Button Content="X" FontSize="11" Width="20" Height="20" HorizontalAlignment="Right" Margin="0,5,5,5" Click="Button_Click" BorderBrush="Black" Foreground="Red"/>
    </Grid>
</UserControl>
